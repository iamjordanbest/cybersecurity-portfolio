# Grafana Cloud Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control

# Grafana Cloud Instance
GRAFANA_CLOUD_URL=https://your-org.grafana.net

# Grafana Cloud API Token (Service Account Token)
# Create at: Grafana Cloud > Administration > Service Accounts
GRAFANA_API_TOKEN=your_service_account_token_here

# Grafana Cloud Prometheus Configuration
GRAFANA_PROMETHEUS_USER=your_prometheus_user_id
PROMETHEUS_URL=https://prometheus-prod-XX-prod-us-east-X.grafana.net/api/prom/push

# Alloy Remote Write Token
# This is the API key for Alloy to push metrics to Grafana Cloud
ALLOY_REMOTE_WRITE_TOKEN=your_alloy_token_here

# Application Configuration
PROMETHEUS_EXPORTER_PORT=8000
METRICS_UPDATE_INTERVAL=60
DB_PATH=data/cspm.db

# Optional: AWS Configuration (if different from default AWS CLI profile)
# AWS_PROFILE=default
# AWS_REGION=us-east-1
